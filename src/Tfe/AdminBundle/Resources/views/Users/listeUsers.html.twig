
{% extends "TfeCoreBundle:Default:index.html.twig" %}

{% block body %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Voir Profil</th>
            <th>Statut Compte</th>

        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>
                <a class="btn btn-primary" href="{{ path('tfe_admin_user_profil', {'id': user.id}) }}">Profil</a>
            </td>
            <td>
                {% if user.locked == FALSE %}
                <a class="btn btn-danger" href="{{ path('tfe_admin_user_account_descact', {'id': user.id}) }}">Désactiver</a>
                {% endif %}
                {% if user.locked == TRUE %}
                <a class="btn btn-primary" href="{{ path('tfe_admin_user_account_activation', {'id': user.id}) }}">Activer</a>
                    {% endif %}
            </td>
        </tr>
        </tbody>
        <tbody>
        {% endfor %}

    </table>
    <!--affiche numéro de page -->
    {#<div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>#}
{% endblock %}